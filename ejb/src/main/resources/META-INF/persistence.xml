<?xml version="1.0" encoding="utf-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="logisticsPU" transaction-type="JTA">

        <jta-data-source>jdbc/logistics_db</jta-data-source>
        <class>com.waka.entity.User</class>
        <class>com.waka.entity.UserType</class>
        <class>com.waka.entity.Routes</class>
        <class>com.waka.entity.City</class>
        <class>com.waka.entity.Package</class>
        <class>com.waka.entity.PackageStatus</class>
        <class>com.waka.entity.RouteCondition</class>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>

        <shared-cache-mode>DISABLE_SELECTIVE</shared-cache-mode>
    </persistence-unit>
</persistence>